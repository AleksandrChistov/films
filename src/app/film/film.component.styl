.film
  display flex

.film__title
  text-align center
  margin 10px

.film-main
  padding 0 40px

.film__descr
  line-height 20px

.film__duration, .genres, .date-relise
  border-bottom 1px solid #01d277
  padding-bottom 10px
  margin 10px 0

.film__duration
  margin-top 20px

.genres
  margin-bottom 10px

.film__info-wrap
  display flex
  justify-content space-between

.rating
  margin-right 20px
  display flex
  flex-direction column
  align-items center

.raiting-circle
  width 140px
  height 140px
  background #000000
  color #ffffff
  border-radius 50%
  display flex
  flex-direction column
  justify-content center
  align-items center
  margin 0 0 10px

.genres-and-data
    display flex
    flex-direction column
    flex-basis 70%

.ratin__votes
  font-size 14px
  margin 0

.raiting-circle__number
  font-size 34px